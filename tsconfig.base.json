{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2021",

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",

    /* Emit */
    "sourceMap": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
